<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".CoursesActivity">

    <TextView
        android:id="@+id/textCourses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Courses"
        android:textColor="@color/primary_green"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textCourses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:backgroundTint="@color/primary_green"
            android:padding="16dp">

            <!-- Updated category title -->
            <TextView
                android:id="@+id/textViewSixweek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular Six-Week Courses"
                android:textColor="@color/primary_green"
                android:textSize="22sp"
                android:textStyle="bold" />

            <include layout="@layout/course_card_item" android:id="@+id/cardFirstAid"/>
            <include layout="@layout/course_card_item" android:id="@+id/cardGardening"/>
            <!-- Moved Cooking course to this category -->
            <include layout="@layout/course_card_item" android:id="@+id/cardCooking"/>

            <!-- Updated category title -->
            <TextView
                android:id="@+id/textViewSixMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Popular Short Courses"
                android:textColor="@color/primary_green"
                android:textSize="22sp"
                android:textStyle="bold" />

            <include layout="@layout/course_card_item" android:id="@+id/cardLandscaping"/>
            <!-- Added new course cards -->
            <include layout="@layout/course_card_item" android:id="@+id/cardPediatricFirstAid"/>
            <include layout="@layout/course_card_item" android:id="@+id/cardBasicSewing"/>

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
